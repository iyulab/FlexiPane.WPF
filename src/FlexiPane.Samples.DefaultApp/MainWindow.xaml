<Window
  x:Class="FlexiPane.Samples.DefaultApp.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:flexiPane="clr-namespace:FlexiPane.Controls;assembly=FlexiPane"
  xmlns:local="clr-namespace:FlexiPane.Samples.DefaultApp"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="FlexiPane Demo"
  Width="900"
  Height="600"
  mc:Ignorable="d">
  
  <Window.Resources>
    <!-- Custom Split Guide Template -->
    <DataTemplate x:Key="CustomSplitGuideTemplate">
      <Border Background="#2E3440" CornerRadius="8" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
          <TextBlock Text="ðŸŽ¯ Custom Split Guide" 
                     FontSize="18" 
                     FontWeight="Bold" 
                     Foreground="#88C0D0" 
                     HorizontalAlignment="Center" 
                     Margin="0,0,0,10"/>
          
          <TextBlock Text="Click anywhere to split the panel" 
                     FontSize="12" 
                     Foreground="#D8DEE9" 
                     HorizontalAlignment="Center" 
                     Margin="0,0,0,5"/>
          
          <TextBlock Text="Use edges to change direction" 
                     FontSize="10" 
                     Foreground="#81A1C1" 
                     HorizontalAlignment="Center" 
                     FontStyle="Italic"/>
          
          <Border Background="#4C566A" 
                  CornerRadius="4" 
                  Padding="8,4" 
                  Margin="0,10,0,0">
            <TextBlock Text="Space: Toggle Direction | Esc: Exit" 
                       FontSize="9" 
                       Foreground="#ECEFF4" 
                       HorizontalAlignment="Center"/>
          </Border>
        </StackPanel>
      </Border>
    </DataTemplate>
  </Window.Resources>
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  Toolbar  -->
    <ToolBar Grid.Row="0" Background="#F0F0F0">
      <Button
        x:Name="ToggleSplitModeButton"
        Click="ToggleSplitModeButton_Click"
        Content="Toggle Split Mode"
        ToolTip="Toggle split mode on/off" />
      <Separator />
      <Button
        x:Name="SplitVerticalButton"
        Click="SplitVerticalButton_Click"
        Content="Vertical Split"
        ToolTip="Split current pane vertically" />
      <Button
        x:Name="SplitHorizontalButton"
        Click="SplitHorizontalButton_Click"
        Content="Horizontal Split"
        ToolTip="Split current pane horizontally" />
      <Separator />
      <Button
        x:Name="ToggleCustomGuideButton"
        Click="ToggleCustomGuideButton_Click"
        Content="Toggle Custom Guide"
        ToolTip="Toggle between default and custom split guide" />
      <Separator />
      <Button
        x:Name="SaveLayoutButton"
        Click="SaveLayoutButton_Click"
        Content="Save Layout"
        ToolTip="Save current layout to file" />
      <Button
        x:Name="LoadLayoutButton"
        Click="LoadLayoutButton_Click"
        Content="Load Layout"
        ToolTip="Load layout from file" />
      <Button
        x:Name="ClearLayoutButton"
        Click="ClearLayoutButton_Click"
        Content="Clear All"
        ToolTip="Clear all panes and reset"
        Background="#FFFFEEEE" />
      <Separator />
      <Button
        x:Name="LoadIDELayoutButton"
        Click="LoadIDELayoutButton_Click"
        Content="IDE Layout"
        ToolTip="Load preset IDE layout" />
      <Button
        x:Name="LoadSimpleLayoutButton"
        Click="LoadSimpleLayoutButton_Click"
        Content="Simple Layout"
        ToolTip="Load preset simple layout" />
    </ToolBar>

    <!--  Main Content Area with Custom Split Guide Template -->
    <flexiPane:FlexiPanel x:Name="FlexiPanel" 
                          Grid.Row="1"
                          SplitGuideContentTemplate="{StaticResource CustomSplitGuideTemplate}" />
  </Grid>
</Window>
