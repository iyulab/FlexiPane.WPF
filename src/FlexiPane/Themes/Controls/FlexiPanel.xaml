<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:FlexiPane.Controls">

  <!--  FlexiPanel default style  -->
  <Style TargetType="{x:Type controls:FlexiPanel}">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controls:FlexiPanel}">
          <Border Background="{TemplateBinding Background}">
            <ContentPresenter x:Name="PART_RootContent" Content="{TemplateBinding RootContent}" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>