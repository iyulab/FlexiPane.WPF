<Window
  x:Class="FlexiPane.Samples.DefaultApp.MainWindowSimple"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:flexiPane="clr-namespace:FlexiPane.Controls;assembly=FlexiPane"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="FlexiPane Simple Demo"
  Width="900"
  Height="600"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  Simple Toolbar  -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
      <ToggleButton x:Name="ModeToggleButton" Content="Toggle Split Mode" Padding="10,5" IsChecked="False" />
      <TextBlock x:Name="StatusText" Text="Split Mode: OFF" VerticalAlignment="Center" Margin="20,0" />
    </StackPanel>

    <!--  Minimal FlexiPanel usage - just add the control!  -->
    <flexiPane:FlexiPanel
      x:Name="FlexiPanel"
      Grid.Row="1"
      IsSplitModeActive="{Binding ElementName=ModeToggleButton, Path=IsChecked, Mode=OneWay, FallbackValue=False, UpdateSourceTrigger=PropertyChanged}" 
      ContentRequested="OnContentRequested"
      />
  </Grid>
</Window>